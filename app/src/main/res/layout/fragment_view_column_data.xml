<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view_test.ColumnDataViewActivity">

    <RelativeLayout
        android:id="@+id/columnListLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/titleTextView"
            style="@style/Text.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/descriptionTextView"
            style="@style/TextAppearance.MaterialComponents.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/titleTextView"
            android:layout_marginTop="@dimen/default_margin"/>

        <TextView
            android:id="@+id/columnTypeLabelTextView"
            style="@style/TextAppearance.MaterialComponents.Body2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/descriptionTextView"
            android:layout_marginTop="@dimen/default_margin"
            android:text="@string/column_type" />

        <TextView
            android:id="@+id/columnTypeTextView"
            style="@style/TextAppearance.MaterialComponents.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/columnTypeLabelTextView" />

        <LinearLayout
            android:layout_marginTop="@dimen/default_margin"
            android:id="@+id/columnSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/columnTypeTextView"/>
    </RelativeLayout>

</ScrollView>