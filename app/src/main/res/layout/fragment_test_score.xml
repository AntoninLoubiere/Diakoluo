<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".test_tests.TestScoreFragment">

    <TextView
        android:id="@+id/scoreTextView"
        style="@style/TextAppearance.MaterialComponents.Headline4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="?android:textColorPrimary" />

    <ProgressBar
        android:id="@+id/scoreProgressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/scoreTextView"/>

    <TextView
        android:id="@+id/secondaryScoreTextView"
        style="@style/TextAppearance.MaterialComponents.Headline5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/scoreProgressBar"
        android:textAlignment="center"
        android:textColor="?android:textColorSecondary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/mainMenuButton"
            style="@style/buttonInBar.Outlined"
            android:text="@string/main_menu" />

        <Button
            android:id="@+id/restartButton"
            style="@style/buttonInBar"
            android:text="@string/restart" />

    </LinearLayout>



</RelativeLayout>