<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".test_tests.TestSettingsActivity"
    android:layout_margin="@dimen/default_margin">

    <TextView
        android:id="@+id/numberQuestionToAskTextView"
        style="@style/Body0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin"
        android:text="@string/number_question_to_ask" />

    <Spinner
        android:id="@+id/numberQuestionToAskSpinner"
        style="@style/Body0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/numberQuestionToAskTextView"
        android:spinnerMode="dropdown" />

    <TextView
        android:id="@+id/numberColumnToShowTextView"
        style="@style/Body0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/numberQuestionToAskSpinner"
        android:layout_marginTop="@dimen/default_margin"
        android:text="@string/number_column_to_show" />

    <SeekBar
        android:id="@+id/numberColumnToShowSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/numberColumnToShowTextView"
        android:layout_toStartOf="@id/numberColumnToShowSeekBarTextView" />

    <TextView
        android:id="@+id/numberColumnToShowSeekBarTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/numberColumnToShowSeekBar"
        android:layout_alignBottom="@id/numberColumnToShowSeekBar"
        android:layout_alignParentEnd="true"
        android:text="@string/number_column_to_show_seekbar_textview" />

    <Button
        android:id="@+id/validButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/valid"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>